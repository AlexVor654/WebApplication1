@{
    ViewBag.Title = "CreateCategorys";
    Layout = "/Views/Shared/Admin_Layout.cshtml";
}
@model WebApplication1.Models.Category
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                
                    <h2>Create categorie</h2>
                <form id="createCategoryForm">
                    <div class="form-group">
                        <label for="USERNAME" class="form-label">CATEGORY_NAME:</label>
                        <input type="text" class="form-control" id="CATEGORY_NAME" name="CATEGORY_NAME" required />
                    </div>

                    <div class="form-group">
                        <label for="CATEGORY_ICON" class="form-label">CATEGORY_ICON:</label>
                        <input type="text" class="form-control" id="CATEGORY_ICON" name="CATEGORY_ICON" required />
                    </div>

                    <div class="form-group">
                        <label for="PROCEDURE_NAME" class="form-label">PROCEDURE_NAME:</label>
                        <input type="text" class="form-control" id="PROCEDURE_NAME" name="PROCEDURE_NAME" required />
                    </div>

                    <div class="form-group">
                        <label for="DESCRIPTION" class="form-label">DESCRIPTION:</label>
                        <input type="text" class="form-control" id="DESCRIPTION" name="DESCRIPTION" required />
                    </div>
                    <br />
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button type="submit" asp-area=""  class="btn btn-success">Send</button>
                    </div>
                   </form>
            </div>
        </div>
    </div>
    <br />
    <div class="d-flex justify-content-between">
        <a href="@Url.Action("AllCategorys", "Admin")" class="btn btn-secondary mx-auto">All Categorys</a>
    </div>

    <script>
        // Логирование данных формы при отправке
        $('#createCategoryForm').on('submit', function (event) {
            event.preventDefault(); // Останавливаем отправку формы, чтобы проверить данные

            var formData = {
                CATEGORY_NAME: $('#CATEGORY_NAME').val(),
                CATEGORY_ICON: $('#CATEGORY_ICON').val(),
                PROCEDURE_NAME: $('#PROCEDURE_NAME').val(),
                DESCRIPTION: $('#DESCRIPTION').val()
            };

            console.log('Form data:', formData);

            // Отправка формы через AJAX
            $.ajax({
                url: 'CreateCategory',
                method: 'POST',
                data: formData,
                success: function (response) {
                    // Обработка успешного ответа
                    alert('Request sent successfully!');
                },
                error: function () {
                    // Обработка ошибки
                    alert('Error sending request.');
                }
            });
        });
    </script>




</body>