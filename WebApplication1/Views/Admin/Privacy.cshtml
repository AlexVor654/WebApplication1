@{
    ViewBag.Title = "Privacy";
    Layout = "/Views/Shared/Admin_Layout.cshtml";
}
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
    <h2>Calculator Form</h2>
    <form id="calculatorForm">
        <input class="form-control" type="number" name="FirstNumber" /><br />
        <label for="Operation">Выберите операцию:</label><br />
        <select class="form-select" name="Operation" id="Operation">
            <option value="plus">+</option>
            <option value="minus">-</option>
            <option value="umn">*</option>
            <option value="delete">/</option>
        </select> <br />
        <input class="form-control" type="number" name="SecondNumber" /><br />
                    <button type="submit" class="btn btn-light">Calculate</button>
                    <p class="h4" id="result"></p>
    </form>
            </div>
        </div>
    </div>

    

    

    <!-- Подключаем jQuery -->
    
    <script>
        $(document).ready(function () {
            $('#calculatorForm').on('submit', function (event) {
                event.preventDefault(); // Останавливаем обычную отправку формы

                $.ajax({
                    url: '/Home/Privacy', // URL, куда будет отправлен запрос
                    type: 'POST',
                    data: $(this).serialize(), // Сериализуем данные формы
                    success: function (response) {
                        $('#result').text(response); // Отображаем результат
                    },
                    error: function () {
                        $('#result').text('Ошибка при расчете.');
                    }
                });
            });
        });
    </script>
</body>
