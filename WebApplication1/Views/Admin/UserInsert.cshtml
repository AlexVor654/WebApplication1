@model WebApplication1.Models.UserModel
@{
    ViewBag.Title = "Create User";
    Layout = "/Views/Shared/Admin_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <form asp-action="UsersInsert" method="post">
                <h2>Insert User</h2>
                <div class="form-group">
                    <label for="username" class="form-label">Role Id:</label>
                    <input type="number" id="RoleId" name="RoleId" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="password" class="form-label">FIRST_NAME:</label>
                    <input type="text" id="FIRST_NAME" class="form-control" name="FIRST_NAME" required />
                </div>
                <div class="form-group">
                    <label for="email" class="form-label">LAST_NAME:</label>
                    <input type="text" class="form-control" id="LAST_NAME" name="LAST_NAME" required />
                </div>

                <div class="form-group">
                    <label for="username" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="Email" name="Email" required />
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">Phone number:</label>
                    <input type="text" class="form-control" id="PHONE" name="PHONE" required />
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">User Password:</label>
                    <input type="password" class="form-control" id="PASSWD" name="PASSWD" required />
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                <br />
                <button type="submit" asp-area="" asp-controller="Home" asp-action="AllRequest" class="btn btn-success">Send</button>
        </div>
</form>
        </div>
    </div>
</div>
<br />
<div class="d-flex justify-content-between">
    <a href="@Url.Action("AllUser", "Admin")" class="btn btn-secondary mx-auto">All User</a>
</div>

