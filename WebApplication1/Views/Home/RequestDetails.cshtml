<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h2>Request Details</h2>
    <div id="userInfoContainer"></div> <!-- Контейнер для вывода данных -->

    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("GetUsersInfo", "Home")?val=1', // Правильный путь к вашему методу
                method: "POST",
                contentType: "application/json",
                success: function (data) {
                    console.log("Полученные данные:", data); // Вывод данных в консоль

                    // Создаем HTML-контент с данными
                    var htmlContent = '<p><strong>Title:</strong> ' + data["TITLE"] + '</p>';
                    htmlContent += '<p><strong>Description:</strong> ' + data["DESCRIPTION"] + '</p>';

                    // Вставляем HTML-контент в контейнер
                    $('#userInfoContainer').html(htmlContent);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.error('Ошибка запроса:', textStatus, errorThrown);
                }
            });
        });
    </script>
</body>
