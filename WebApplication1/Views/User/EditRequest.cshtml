@{
    ViewBag.Title = "EditReq";
    Layout = "/Views/Shared/User_Layout.cshtml";
}
@model WebApplication1.Models.RequestDetail


<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                <form id="editCategoryForm">
                    <h2>Update Request</h2>

                    <div class="form-group">
                        <label for="REQUEST_ID" class="form-label">REQUEST_ID:</label>
                        <input type="text" class="form-control" id="REQUEST_ID" name="REQUEST_ID" disabled />
                    </div>

                    <div class="form-group">
                        <label for="CATEGORY_ID" class="form-label">CATEGORY_ID:</label>
                        <input type="text" class="form-control" id="CATEGORY_ID" name="CATEGORY_ID" disabled />
                    </div>

                    <div class="form-group">
                        <label for="USER_ID" class="form-label">USER_ID:</label>
                        <input type="text" class="form-control" id="USER_ID" name="USER_ID" disabled />
                    </div>


                    <div class="form-group">
                        <label for="TITLE" class="form-label">TITLE:</label>
                        <input type="text" class="form-control" id="TITLE" name="TITLE" required />
                    </div>

                    <div class="form-group">
                        <label for="DESCRIPTION" class="form-label">DESCRIPTION:</label>
                        <input type="text" class="form-control" id="DESCRIPTION" name="DESCRIPTION" required />
                    </div>

                    <div class="form-group">
                        <label for="FIELD_ID" class="form-label">FIELD_ID:</label>
                        <input type="text" class="form-control" id="FIELD_ID" name="FIELD_ID" required />
                    </div>

                    <div class="form-group">
                        <label for="FIELD_VALUE" class="form-label">FIELD_VALUE:</label>
                        <input type="text" class="form-control" id="FIELD_VALUE" name="FIELD_VALUE" required />
                    </div>



                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button type="submit" asp-area="" asp-controller="Home" asp-action="Requests" class="btn btn-success">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>

        $(document).ready(function () {
            var jsonObject = JSON.parse(sessionStorage.getItem('selectedRecord'));

            if (jsonObject) {
                console.log('Полученные данные:', jsonObject);
                $('#REQUEST_ID').val(jsonObject.REQUEST_ID);
                $('#CATEGORY_ID').val(jsonObject.CATEGORY_ID);
                $('#USER_ID').val(jsonObject.USER_ID);
                $('#TITLE').val(jsonObject.TITLE);
                $('#DESCRIPTION').val(jsonObject.DESCRIPTION);
                $('#FIELD_ID').val(jsonObject.FIELD_ID);
                $('#FIELD_VALUE').val(jsonObject.FIELD_VALUE);
            }

            $('form').submit(function (event) {
                event.preventDefault();

                var formData = {
                    REQUEST_ID: $('#REQUEST_ID').val(),
                    CATEGORY_ID: $('#CATEGORY_ID').val(),
                    USER_ID: $('#USER_ID').val(),
                    TITLE: $('#TITLE').val(),
                    DESCRIPTION: $('#DESCRIPTION').val(),
                    FIELD_ID: $('#FIELD_ID').val(),
                    FIELD_VALUE: $('#FIELD_VALUE').val()
                };

                $.ajax({
                    url: '@Url.Action("EditRequest", "User")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (response) {
                        if (response.success) {
                            alert('Категория успешно обновлена!');
                        } else {
                            alert('Не удалось обновить категорию: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Произошла ошибка при обновлении категории.');
                        console.log(error);
                    }
                });
            });
        });
    </script>



</body>